<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <HBox>
         <children>
            <TextField fx:id="nameText" promptText="Name" HBox.hgrow="ALWAYS" />
            <TextField fx:id="phoneText" promptText="Phone #" HBox.hgrow="ALWAYS" />
            <TextField fx:id="emailText" promptText="Email" HBox.hgrow="ALWAYS" />
            <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#addItem" text="Add" HBox.hgrow="ALWAYS" />
            <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#removeItem" text="Remove" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <ListView fx:id="list" VBox.vgrow="ALWAYS" />
   </children>
</VBox>
